{{#if updatePostForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=post.body}}
      </div>
      <button {{action 'update' post}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update Post</button>
  <!-- <button {{action 'delete' post}}>Delete Post</button> -->
{{/if}}

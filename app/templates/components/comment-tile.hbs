<li>
  "{{comment.content}}"
  - by {{comment.author}}
  <button {{action 'delete' comment}}>Delete</button>
  {{#if updateCommentForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="author">Name</label>
          {{input value=author id="author" placeholder=comment.author}}
        </div>
        <div class="form-group">
          <label for="content">Comment</label>
          {{input value=content id="content" placeholder=comment.content}}
        </div>
        <button {{action 'update' comment}}>Update</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateCommentForm'}}>Update Comment</button>
  {{/if}}

</li>
